        <Label x:Name="lblProduct_C" Content="Label" HorizontalAlignment="Left" Margin="345,299,0,0" VerticalAlignment="Top" Height="91" Width="135"/>
        <ProgressBar x:Name="pbA" HorizontalAlignment="Left" Height="31" Margin="345,100,0,0" VerticalAlignment="Top" Width="433"/>
